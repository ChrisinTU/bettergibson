<style>
    .head{
        background-color:rgb(41,92,77);
        color: white;
    }
    
    .rowA{background-color:rgb(185,217,235);}
    
    .rowB{background-color:rgb(240,248,255);}
</style>


<div class="container">
    <h1>List of Courses</h1>
    <div class="btn btn-light">
    <%= link_to 'Add A New Course', "courses/new" %>
    </div>
    
    <br /><br />
    <h2>Course List</h2>
    <br />
    <table class='courseslist' border=1>
        <tr class='head'>
            <td>CRN</td>
            <td>Course Code</td>
            <td>Course Name</td>
            <td>Location</td>
            <td>Instructor</td>
            <td>Days</td>
            <td>Start</td>
            <td>Finish</td>
            <td>Credit Hours</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
        <% classname = 'rowA' %>
        <% @courses.each do |course| %>
            <tr class=<%= classname %>>
                <td><%=course.course_num %></td>
                <td><%=course.major_code  + '-' + course.course_code  + '-' + course.section %></td>
                <td><%=course.name %></td>
                <td><%=course.location %></td>
                <td><%=course.instructor %></td>
                <td><%=course.days %></td>
                <td><%=course.start_time %></td>
                <td><%=course.end_time %></td>
                <td><%=course.credits %></td>
               
                <td><%= link_to image_tag("buttons/editBut.png", :width => 30, :height => 30, :alt => "edit button"), edit_course_path(course) %></td>
                <td><%= link_to image_tag("buttons/deleteBut.png", :width => 30, :height => 30, :alt => "delete button"), course_path(course), method: :delete %> </td>
            </tr>
            <% if classname ==  'rowA' %>
                <% classname = 'rowB' %>
            <% else %>
                <% classname = 'rowA' %>
            <% end %>
        <% end %>
    </table>

</div>