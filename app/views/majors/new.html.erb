<h1>Add a New Major</h1>

<%= link_to 'Go back to main page', root_path %>

<br /><br />

<div class="well">

    <%= form_for @new_major do |f| %>
    
    <div class="form-group"> 
    <%= f.label :major_name, class: "control-label" %>
    <%= f.text_field :major_name, :required => true, class: "form-control" %>
    </div>
    
    <div class="actions"> 
    <%= f.submit "Create", :required => true, class: "btn btn-light" %>
    </div> 
    <% end %>
    </div>
</div>
    
