<style>
    .head{
        background-color:rgb(41,92,77);
        color: white;
    }
    
    .rowA{background-color:rgb(185,217,235);}
    
    .rowB{background-color:white;}
</style>
<h1>List of Students</h1>
<%= link_to 'New Account', "students/new" %>
<br /><br /><br />
<table class='courseslist' border=1>
    <tr class='head'>
        <td>Student ID</td>
        <td>Last Name</td>
        <td>First Name</td>
        <td>Email</td>
        <td>Grad. Year</td>
        <td>Major</td>
        <td>Credits Taken</td>
    </tr>
    <% classname = 'rowA' %>
    <% @students.each do |student| %>
        <tr class=<%= classname %>>
            <td><%=student.student_id %></td>
            <td><%=student.last_name %></td>
            <td><%=student.first_name %></td>
            <td><%=student.email %></td>
            <td><%=student.grad_year %></td>
            <td><%=student.major %></td>
            <td><%=student.credits_taken %></td>
        </tr>
        <% if classname ==  'rowA' %>
            <% classname = 'rowB' %>
        <% else %>
            <% classname = 'rowA' %>
        <% end %>
    <% end %>
</table>
